{
  "name": "await-event-emitter",
  "version": "2.2.1",
  "description": "Await events library like EventEmitter",
  "author": "imcuttle <imcuttle@163.com>",
  "scripts": {
    "test": "npx jest",
    "test:watch": "npm test -- --watch",
    "build": "npm run clean && npm run build:es && npm run build:cjs && npm run build:tds",
    "dev": "TSC_OPTIONS=\"--watch\" npm run build",
    "build:es": "tsc $TSC_OPTIONS --outDir es --module es6",
    "build:cjs": "tsc $TSC_OPTIONS --outDir lib",
    "build:tds": "tsc $TSC_OPTIONS --emitDeclarationOnly -d",
    "clean": "rimraf types es lib",
    "prepare": "npm run build",
    "prerelease": "npm test",
    "postinstall": "npm run build",
    "release": "standard-version --no-verify"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=10"
  },
  "files": [
    "es",
    "types",
    "lib",
    "src"
  ],
  "main": "lib",
  "types": "types",
  "license": "MIT",
  "repository": {
    "url": "https://gitlab.rankingcoach.com/d.stefancu/await-event-emitter.git"
  },
  "module": "es",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__test{s,}__/*.(spec|test).{t,j}s{x,}"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@types/jest": "26.0.20",
    "@types/node": "10.17.27",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "pretty-quick": "3.1.0",
    "rimraf": "3.0.2",
    "standard-version": "9.1.1",
    "ts-jest": "26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "is-promise": "4.0.0"
  },
  "standard-version": {
    "skip": {
      "tag": false,
      "commit": false
    }
  }
}
