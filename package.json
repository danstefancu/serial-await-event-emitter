{
  "name": "serial-await-event-emitter",
  "version": "2.3.2",
  "description": "Await events library like EventEmitter",
  "author": "imcuttle <imcuttle@163.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prerelease": "npm run test:cov",
    "release": "standard-version --no-verify",
    "release-try": "npm run release -- --dry-run"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "repository": {
    "url": "https://gitlab.rankingcoach.com/d.stefancu/await-event-emitter.git"
  },
  "dependencies": {
    "is-promise": "4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@golevelup/ts-jest": "^0.3.7",
    "@types/jest": "28.1.8",
    "@types/node": "14.14.31",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^5.1.3",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.4.0",
    "rimraf": "^5.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "skip": {
      "tag": false
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
